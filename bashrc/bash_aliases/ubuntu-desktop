# Ubuntu (Desktop) 12.10

alias install='sudo apt-get -y install'
alias up='sudo apt-get update && sudo apt-get -y dist-upgrade'
alias remove='sudo apt-get remove'
alias autoremove='sudo apt-get -y autoremove'
alias rmok="dpkg -l 'linux-*' | sed '/^ii/!d;/'"$(uname -r | sed "s/\(.*\)-\([^0-9]\+\)/\1/")"'/d;s/^[^ ]* [^ ]* \([^ ]*\).*/\1/;/[0-9]/!d' | xargs sudo apt-get -y purge"
