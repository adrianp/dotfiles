" disable arrow keys
noremap <Up> ""
noremap! <Up> <Esc>
noremap <Down> ""
noremap! <Down> <Esc>
noremap <Left> ""
noremap! <Left> <Esc>
noremap <Right> ""
noremap! <Right> <Esc>

" display line numbers
set number

" don't backup files
set nobackup
set nowritebackup
set nowritebackup

" enable auto indentation
set autoindent

" display white space
"set list

" 4 spaces instead of tabs
set ts=4 sts=0 sw=4 expandtab

" line widtd
set textwidth=79

" disable syntax highlighting on long lines
set synmaxcol=2048

" make vim copy to system clipboard
set clipboard=unnamed
