[color]
    ui = auto
[merge]
    tool = meld
[diff]
    tool = meld
[difftool]
    prompt = false
[mergetool]
    prompt = false
[push]
    default = current
[help]
    autocorrect = 1
[branch]
    autosetuprebase = always
[remote "dotfiles"]
    url=git@github.com:adrianp/dotfiles.git
    url=git@bitbucket.org:adrianp_/dotfiles.git
