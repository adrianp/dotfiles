[alias]
    a = add
    b = branch -avv
    c = commit -s
    ci = commit -as
    cia = commit --amend
    cis = commit -as --squash
    cish = commit -as --squash HEAD
    cln = clean -n
    clf = clean -f
    co = checkout
    d = difftool
    f = fetch
    gp = grep --untracked --ignore-case --line-number --break
    k = log --graph --decorate --pretty=oneline --abbrev-commit
    kl = log --decorate --pretty=oneline --abbrev-commit
    l = log
    p = push
    pa = push --all
    paf = push --all --force
    r = rebase
    ra = rebase --abort
    rc = rebase --continue
    rem = remote -v
    ri = rebase -i --autosquash
    rs = rebase --skip
    rt = reset
    s = stash -u
    sa = stash apply
    st = status
    up = pull
