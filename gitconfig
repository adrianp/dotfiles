[alias]
    a = add
    aa = add .
    ap = add --patch
    b = branch
    bv = branch -vv
    ba = branch -avv
    c = commit -s
    ci = commit -as
    cia = commit --amend
    cis = commit -a --squash
    cish = commit -a --squash HEAD
    cln = clean -n
    clf = clean -f
    co = checkout
    coa = checkout .
    cp = cherry-pick
    d = difftool
    dc = difftool --cached
    dh = difftool HEAD
    dw = diff --word-diff
    f = fetch
    gp = grep --untracked --ignore-case --line-number --break
    k = log --graph --decorate --pretty=oneline --abbrev-commit
    kl = log --decorate --pretty=oneline --abbrev-commit --name-status HEAD~1..HEAD
    l = log
    p = push
    pa = push --all
    paf = push --all --force
    r = rebase
    ra = rebase --abort
    rc = rebase --continue
    rem = remote -v
    ri = rebase -i --autosquash
    rs = rebase --skip
    rt = reset
    rts = reset --soft
    rth = reset --hard
    rg = reflog
    s = stash
    sh = show --oneline
    sp = stash pop
    sl = stash list
    st = status -sb
    sts = status
    up = pull
    files = diff-tree --no-commit-id --name-only -r
    refs = for-each-ref --sort=-committerdate --format='%(refname:short) %(committerdate:short)'
