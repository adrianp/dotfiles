    name = Adrian-Tudor Panescu
[color]
    ui = auto
[merge]
    tool = meld
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[mergetool]
    prompt = false
[push]
    default = current
[help]
    autocorrect = 1
[branch]
    autosetuprebase = always
[clean]
    requireForce = true
[web]
    browser = google-chrome
[remote "dotfiles"]
    url=git@github.com:adrianp/dotfiles.git
    url=git@bitbucket.org:adrianp_/dotfiles.git
